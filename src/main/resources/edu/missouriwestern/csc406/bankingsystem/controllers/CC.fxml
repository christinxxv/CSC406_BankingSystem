<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.missouriwestern.csc406.bankingsystem.controllers.CC">
   <children>
      <HBox alignment="CENTER" prefHeight="74.0" prefWidth="603.0" style="-fx-background-color: black;">
         <children>
            <ImageView fitHeight="47.0" fitWidth="215.0">
               <image>
                  <Image url="@../../../../../Images/hbox_red_logo.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <ImageView fitHeight="265.0" fitWidth="292.0" layoutX="28.0" layoutY="93.0">
         <image>
            <Image url="@../../../../../Images/useCC.png" />
         </image>
      </ImageView>
      <Button fx:id="returnCustomerButton" layoutX="364.0" layoutY="93.0" mnemonicParsing="false" onAction="#toCustomer" prefHeight="25.0" prefWidth="209.0" style="-fx-background-color: black;" text="Return to Customer Portal" textFill="#605a5a" />
      <BorderPane layoutX="47.0" layoutY="112.0" prefHeight="74.0" prefWidth="222.0" style="-fx-background-color: #d4d4d4;">
         <center>
            <Label fx:id="machineLabel" prefHeight="77.0" prefWidth="144.0" text="Please insert card number." textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
      <ImageView fitHeight="126.0" fitWidth="215.0" layoutX="361.0" layoutY="213.0">
         <image>
            <Image url="@../../../../../Images/PBcc.png" />
         </image>
      </ImageView>
      <TextField fx:id="cardNumText" layoutX="409.0" layoutY="281.0" onAction="#validateCard" prefHeight="9.0" prefWidth="120.0" style="-fx-background-color: white;" />
