      <TextField fx:id="purchaseAmtText" layoutX="77.0" layoutY="361.0" onAction="#validateWithdrawAmt" visible="false" />
      <TextField fx:id="purchaseNoteText" layoutX="77.0" layoutY="361.0" onAction="#enterNote" visible="false" />
      <Button fx:id="receiptButton" layoutX="422.0" layoutY="133.0" mnemonicParsing="false" onAction="#viewReceipt" prefHeight="25.0" prefWidth="95.0" style="-fx-background-color: red;" text="View Receipt" visible="false" />
   </children>
</AnchorPane>
